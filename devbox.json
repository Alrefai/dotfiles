{
  "packages": [
    "git@latest",
    "wget@latest",
    "home-manager@latest",
    "neovim@latest",
    "python3Full@latest",
    "_1password@latest",
    "glow@latest",
  ],
  "env": {
    "DEVBOX_GLOBAL_PREFIX":    "$HOME/.local/share/devbox/global/default/.devbox/nix/profile/default",
    "DEVBOX_GLOBAL_ROOT":      "$HOME/.local/share/devbox/global/current",
    "DEVBOX_COREPACK_ENABLED": "true",
  },
  "shell": {
    "scripts": {
      "switch-home": "home-manager switch -b bak --flake .",
      "chsh-zsh": [
        "grep -Fxq \"$(command -v zsh)\" /etc/shells ||",
        "command -v zsh | sudo tee -a /etc/shells",
        "chsh -s \"$(command -v zsh)\""
      ]
    }
  }
}
