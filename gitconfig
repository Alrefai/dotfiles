[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[core]
	editor = atom --wait
	excludesfile = ~/.gitignore_global
[color]
	ui = auto
[merge]
	conflictstyle = diff3
[tig "color"]
	cursor          = black yellow
	# UI colors
	title-blur      = black blue
	title-focus     = black blue    bold
# View specific color
[tig "color.tree"]
	date            = cyan  default bold
[diff]
	submodule = log
	tool = icdiff
[user]
	useConfigOnly = true

# Github style diff in terminal with icdiff
[alias]
	showtool = "!f() { git difftool $1^ $1; }; f"
	added = difftool --cached
[difftool]
	prompt = false
[difftool "icdiff"]
	cmd = /usr/local/bin/icdiff --line-numbers $LOCAL $REMOTE
[pager]
	difftool = true

# References:
# icdiff -> http://owen.cymru/github-style-diff-in-terminal-with-icdiff
